<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_template_invoice_axo">
		    <t t-call="web.external_layout">
		        <t t-foreach="docs" t-as="o">
                <div class="page">
	            <div class="oe_structure"/> 
	             <div class="row">
	                     	<style>
								.borderless td, .borderless th {
								    border: none;
								}
					        </style>
					
					<div class="col-xs-6 pull-right">
	        			<strong><h3>Facture</h3></strong>
	        		</div>
	        		
					<table class="table borderless">
					  <tr>
					    <td ><strong>Facture N° : </strong><span t-field="o.name"/></td>
					    <td ></td>
					    <td class="col-xs-6 pull-right"><strong>Date : </strong><span t-field="o.date_invoice" t-field-options='{"format": "yyyy/dd/MM"}'/></td>
					 </tr>
					  <tr>
					  	<td ><strong>Code de client : </strong><span t-field="o.partner_id.property_account_receivable_id.code"/></td>
					  	<td ></td>
					    <td ><strong>Societé : </strong><span t-field="o.name"/></td>
					 </tr>
					  <tr>
					  	<td ><strong>Offre N° : </strong><span t-field="o.num_offer"/></td>
					  	<td ></td>
					  	<td >Adresse : <span t-field="o.name"/></td>
					  </tr>
					  <tr>
					  	<td >Campagne : <span t-field="o.name"/></td>
					  	<td ></td>
					  	<td >ICE N°: <span t-field="o.name"/></td>
					  </tr>
					  <tr>
					  	<td >Référence : <span t-field="o.refrence_id"/></td>
					  	<td ></td>
					  	<td >Annonceur - Campagne : <span t-field="o.compagne"/> + <span t-field="o.annance"/></td>
					  </tr>
					  <tr>
					  	<td >Période d'affichage : <span t-field="o.periode"/></td>
					  	<td ></td>
					  	<td >Modalité de paiement : <span t-field="o.modalite_id"/></td>
					  </tr>
					</table>
				</div>

                    <!-- Is there a discount on at least one line? -->
                    <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/>

                    <table class="table table-condensed" name="invoice_line_table">
                        <thead>
                            <tr>
                                <th>Code</th>
	                            <th>Adresse</th>
	                            <th>L</th>
	                            <th>H</th>
	                            <th>Surf</th>
	                            <th class="text-center">Du</th>
	                            <th class="text-center">Au</th>
                                <th class="text-right">P.U. HT</th>
                                <th class="text-right">Total HT</th>
                            </tr>
                        </thead>
                        <tbody class="invoice_tbody">
                            <tr t-foreach="o.invoice_line_ids" t-as="l">
                                <td><span t-field="l.name"/></td>
                                <td><span t-field="l.adresse"/></td>
                                <td><span t-field="l.largeur"/></td>
                                <td><span t-field="l.hauteur"/></td>
                                <td><span t-field="l.area"/></td>
                                <td><span t-field="l.du"/></td>
                                <td><span t-field="l.au"/></td>

                                <td class="text-right">
                                    <span t-field="l.price_unit"/>
                                </td>
                                <td class="text-right" id="subtotal">
                                    <span t-field="l.price_subtotal"
                                        t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                            <tr t-foreach="range(max(5-len(o.invoice_line_ids),0))" t-as="l">
                                <td>&amp;nbsp;</td>
                                <td class="hidden"></td>
                                <td></td>
                                <td></td>
                                <td t-if="display_discount"></td>
                                <td></td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="clearfix">
                        <div id="total" class="row">
                            <div class="col-xs-4 pull-right">
                                <table class="table table-condensed" style="min-width: 250px;max-width: 400px;">
                                    <tr class="border-black" style="border-bottom:1px solid #dddddd;">
                                        <td><strong>Subtotal</strong></td>
                                        <td class="text-right">
                                            <span t-field="o.amount_untaxed" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>
                                    <t t-foreach="o._get_tax_amount_by_group()" t-as="amount_by_group">
                                        <tr style="border-bottom:1px solid #dddddd;">
                                            <t t-if="len(o.tax_line_ids) == 1 and o.amount_untaxed == amount_by_group[2]">
                                                <td><span t-esc="amount_by_group[0]"/></td>
                                                <td class="text-right">
                                                    <span t-esc="amount_by_group[3]"/>
                                                </td>
                                            </t>
                                            <t t-else="">
                                                <td>
                                                    <span t-esc="amount_by_group[0]"/>
                                                    <span>&amp;nbsp;<span>on</span>
                                                        <t t-esc="amount_by_group[4]"/>
                                                    </span>
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="amount_by_group[3]" />
                                                </td>
                                            </t>
                                        </tr>
                                    </t>
                                    <tr class="border-black">
                                        <td><strong>Total</strong></td>
                                        <td class="text-right">
                                            <span t-field="o.amount_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                    <p t-if="o.comment">
                        <span t-field="o.comment"/>
                    </p>
                    <p t-if="o.payment_term_id">
                        <span t-field="o.payment_term_id.note"/>
                    </p>
                    <p t-if="o.fiscal_position_id.note">
                        <span t-field="o.fiscal_position_id.note"/>
                    </p>
                </div>
            </t>
            </t>
        </template>
    </data>
</odoo>
