<?xml version="1.0" encoding="utf-8"?>
<odoo>

            <!--Tree view-->
            <record model="ir.ui.view" id="axo_category_tree_view">
                <field name="name">product.internal.tree</field>
                <field name="model">product.internal</field>
                <field name="type">tree</field>
                <field name="arch" type="xml">
                    <tree editable="bottom">
                        <field name="name"/>
                        <field name="code"/>
                    </tree>
                </field>
            </record>
			
			<!-- Action view-->
            <record model="ir.actions.act_window" id="axo_categ_action_view">
                <field name="name">Cat√©gorie Emplac.</field>
                <field name="type">ir.actions.act_window</field>
                <field name="res_model">product.internal</field>
                <field name="view_type">form</field>
                <field name="view_mode">tree</field>
            </record>

